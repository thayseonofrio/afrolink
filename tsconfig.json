{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "./dist/client/",
        "rootDirs": ["./"],
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es2019",
        "typeRoots": ["./node_modules/@types", "./node_modules/react-hook-form"]
    },
    "include": [
        "./client/src/"
    ],
    "exclude": ["node_modules"]
}