{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "./dist/",
        "rootDirs": ["./"],
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es2019",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "./src/", "setuptests.ts"
    ],
    "exclude": ["node_modules"]
}